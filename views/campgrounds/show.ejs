<% layout("layouts/boilerplate")%>
    <div class="row mb-3">
        <div class="col-6">
            <div class="card">
                <img src="<%= camp.image %>" class="card-img-top" alt="camp image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=camp.title %>
                    </h5>
                    <p class="card-text">
                        <%= camp.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">$<%= camp.price %> per Night</li>
                    <li class="list-group-item text-muted">
                        <%= camp.location %>
                    </li>
                </ul>
                <% if(signedInUser && camp.author.equals(signedInUser)) { %>
                    <div class="card-body">
                        <a href="/campgrounds/<%= camp.id %>/edit" class="btn btn-info">Edit This Campground</a>
                        <form class="d-inline" action="/campgrounds/<%= camp.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete This Campground</button>
                        </form>
                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            <p>
                                Created <%= (Math.floor(Math.random() * 100))%> days ago by <%= camp.author.username %>
                            </p>
                        </div>
            </div>

        </div>
        <div class="col-6">
            <% if(signedInUser) { %>
                <form action="/campgrounds/<%= camp.id %>/reviews" method="POST" class="my-2 validated-form" novalidate>
                    <h3>Leave A Review</h3>
                    <div>
                        <label for="rating" class="form-label">Rating: </label>
                        <input type="range" min="1" max="5" name="review[rating] id=" rating" class="form-range">
                    </div>
                    <div class="my-3">
                        <label class="form-label" for="body">Review:</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="15" rows="3"
                            required></textarea>
                    </div>
                    <button class="btn btn-sm btn-success">Submit</button>
                </form>
                <% } %>
                    <% if(camp.reviews.length) { %>
                        <hr>
                        <h4 class="text-center mb-3">Reviews</h4>

                        <% for(let review of camp.reviews) { %>
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        Rating:
                                        <%= review.rating %>/5
                                    </h6>
                                    <% if(review.author) { %>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            - <%= review.author.username %>
                                        </h6>
                                        <% } %>
                                            <p class="card-text">
                                                Review:
                                                <%= review.body %>
                                            </p>
                                </div>
                                <% if(review.author && signedInUser && review.author.equals(signedInUser)) { %>
                                    <div class="card-footer">
                                        <form
                                            action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-sm btn-outline-danger">Delete This Review</button>
                                        </form>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                                <% } %>
        </div>
    </div>