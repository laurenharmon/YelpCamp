<% layout("layouts/boilerplate")%>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow my-3">
                <div class="card-body">
                    <h1 class="card-title text-center mb-3">New Campground</h1>
                    <hr>
                    <form action="/campgrounds" method="POST" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title: </label>
                            <input class="form-control" type="text" name="campground[title]" id="title" autofocus
                                required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location: </label>
                            <input class="form-control" type="text" name="campground[location]" id="location" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="description">Description: </label>
                            <textarea class="form-control" type="text" name="campground[description]" id="description"
                                required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Price: </label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" placeholder="0.00" name="campground[price]"
                                    aria-describedby="price-label" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="images">Images: </label>
                            <input type="file" name="images" class="form-control" id="images" multiple>
                        </div>
                        <div class="d-grid gap-2 col-9 mx-auto">
                            <button class="btn btn-lg btn-success">Create New Campground</button>
                            <a href="/campgrounds" class="btn btn-sm btn-outline-secondary">Back To Campgrounds</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <script src="/scripts/validateForms.js"></script>