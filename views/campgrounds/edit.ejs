<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">Edit <%= camp.title %> Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= camp.id %>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <input value="<%= camp.title %>" class="form-control" type="text" name="campground[title]"
                        id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input value="<%= camp.location %>" class="form-control" type="text" name="campground[location]"
                        id="location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required>
                        <%= camp.description %>
                    </textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price: </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input value="<%= camp.price %>" type="text" class="form-control" placeholder="0.00"
                            name="campground[price]" aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="images">Add Images: </label>
                    <input class="form-control" type="file" name="images" id="images" multiple>
                </div>
                <div class="mb-3 row">
                    <% camp.images.forEach((img, i)=> { %>
                        <div class="col-6">
                            <div class="form-check-inline">
                                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                    value="<%= img.filename %>">
                                <label for="image-<%= i %>">Delete?</label>
                            </div>
                            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        </div>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Update Campground</button>
                </div>
            </form>
            <div class="mb-3">
                <a href="/campgrounds/<%= camp.id %>">Back To <%= camp.title %> Page</a>
            </div>
        </div>
    </div>