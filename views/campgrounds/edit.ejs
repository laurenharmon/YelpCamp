<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= camp.id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <input value="<%= camp.title %>" class="form-control" type="text" name="campground[title]"
                        id="title">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input value="<%= camp.location %>" class="form-control" type="text" name="campground[location]"
                        id="location">
                </div>

                <div class="mb-3">
                    <label class="form-label" for="image">Image Url: </label>
                    <input value="<%= camp.image %>" class="form-control" type="text" name="campground[image]"
                        id="image">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description">
                        <%= camp.description %>
                    </textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price: </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input value="<%= camp.price %>" type="text" class="form-control" placeholder="0.00"
                            name="campground[price]" aria-describedby="price-label">
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info" type="submit">Update Campground</button>
                </div>
            </form>
            <div>
                <a href="/campgrounds/<%= camp.id %>">Back To <%= camp.title %> Page</a>
            </div>
        </div>
    </div>